{
  "manifest_version": 3,
  "version": "1.0",
  "name": "pitogram-extension",
  "description": "pitogram here",
  "background": {
    "service_worker": "./src/background.ts"
  },
  "icons": {
    "16": "public/icon/icon_16.png",
    "48": "public/icon/icon_48.png"
  },
  "permissions": [
    "cookies",
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.instagram.com/",
    "http://localhost/*",
    "*://*.pitogram.io.vn/"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Pitogram Helper"
  },
  "options_page": "src/settings-page/index.html"
}